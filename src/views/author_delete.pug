extends layout

block content
  h1.mb-4 #{title}: #{author.name}
  p.lead= author.lifespan

  if author_books.length
    .alert.alert-warning
      p.mb-0 
        strong Delete the following books before attempting to delete this author.
    
    h4.mt-4 Books by this author:
    .list-group
      each book in author_books
        .list-group-item
          h5.mb-1
            a(href=book.url) #{book.title}
          p.mb-1 #{book.summary}

  else
    .card.mt-4
      .card-body
        h5.card-title Do you really want to delete this Author?
        form(method='POST')
          input#authorid(type='hidden', name='authorid', value=author._id)
          button.btn.btn-danger(type='submit') Delete Author