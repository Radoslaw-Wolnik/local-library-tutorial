extends layout

block content
  h1.mb-4= title
  if book_list.length
    .list-group
      each book in book_list
        a.list-group-item.list-group-item-action(href=book.url)
          .d-flex.w-100.justify-content-between
            h5.mb-1 #{book.title}
            small #{book.author.name}
  else
    .alert.alert-info No books are currently available.